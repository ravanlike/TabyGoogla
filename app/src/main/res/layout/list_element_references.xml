<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_action_call_black"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/ref_call" />

    <TextView
        android:text="Person Name"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingTop="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:id="@+id/ref_name"
        android:layout_toStartOf="@+id/ref_call"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Was manager, person role"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:id="@+id/ref_role"
        android:layout_below="@+id/ref_name"
        android:layout_toStartOf="@+id/ref_call" />

    <TextView
        android:text="+48 123456789"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"
        android:layout_alignBottom="@id/ref_call"
        android:layout_toStartOf="@+id/ref_call"
        android:id="@+id/ref_tel" />
</RelativeLayout>